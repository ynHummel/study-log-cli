#!/usr/bin/env ruby

puts '== Instalando dependÃªncias =='
system 'gem install bundler --conservative'
system('bundle check') || system('bundle install')

require 'sqlite3'

puts "\n== Preparando banco de dados =="
begin
  db = SQLite3::Database.open "db/database.db"
  db.execute <<~SQL
    CREATE TABLE Estudo(
      title varchar(255),
      category varchar(255),
      descr varchar(255)
    );
  SQL

  seed_data = [["React", "JavaScript","Biblioteca front-end"],
               ["Rails", "Ruby", "Framework para back-end"]]

  seed_data.each do |data|
    db.execute "INSERT INTO Estudo VALUES ( ?, ?, ? )", data
  end

rescue SQLite3::Exception => e
  puts e
ensure
  db.close if db
end